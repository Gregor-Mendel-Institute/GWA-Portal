<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
        >
    <ui:style>

        @external radio;

        .label {
            margin-right: 20px;
            width: 100px;
        }

        .form {
        }

        .form .radio {
            margin-right: 10px;
        }

    </ui:style>
    <g:FlowPanel>
        <b:Form type="INLINE" addStyleNames="{style.form}">
            <b:Fieldset>
                <b:ControlGroup ui:field="chrGroup">
                    <b:ControlLabel for="chr" addStyleNames="{style.label}">Chr</b:ControlLabel>
                    <b:RadioButton name="chr" text="All" formValue="" value="true"/>
                    <b:RadioButton name="chr" text="1" formValue="chr1"/>
                    <b:RadioButton name="chr" text="2" formValue="chr2"/>
                    <b:RadioButton name="chr" text="3" formValue="chr3"/>
                    <b:RadioButton name="chr" text="4" formValue="chr4"/>
                    <b:RadioButton name="chr" text="5" formValue="chr5"/>
                </b:ControlGroup>
            </b:Fieldset>
            <b:Fieldset>
                <b:ControlGroup ui:field="macGroup">
                    <b:ControlLabel for="mac" addStyleNames="{style.label}">
                        Mac [ >=<span ui:field="macLb"/>]
                    </b:ControlLabel>
                    <span ui:field="lowerLimitLb">0</span>
                    <g:TextBox ui:field="macTb" width="150px"></g:TextBox>
                    <span ui:field="upperLimitLb"></span>
                </b:ControlGroup>
            </b:Fieldset>
            <b:Fieldset>
                <b:ControlGroup ui:field="formatGroup">
                    <b:ControlLabel for="format" addStyleNames="{style.label}">Format</b:ControlLabel>
                    <b:RadioButton name="format" text="PNG" formValue="PNG" value="true"/>
                    <b:RadioButton name="format" text="PDF" formValue="PDF"/>
                </b:ControlGroup>
            </b:Fieldset>
            <b:Button icon="FILE" ui:field="downloadBtn" type="PRIMARY" addStyleNames="pull-right">Download</b:Button>
        </b:Form>

    </g:FlowPanel>

</ui:UiBinder>