<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:ed='urn:import:com.gmi.nordborglab.browser.client.editors'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:gchart='urn:import:com.googlecode.gwt.charts.client.corechart'
             xmlns:s="urn:import:com.gmi.nordborglab.browser.client.mvp.view.diversity.experiments"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
             ui:generateLocales='default'>

    <ui:with field="mainRes" type="com.gmi.nordborglab.browser.client.resources.MainResources"/>

    <ui:style>
        .container {
            padding: 19px 19px;
        }

        .actionRow {
            float: right;
        }

        .addPublicationControl {
            margin-right: 20px;
        }

        .stats_item_icon {
            text-align: center;
            display: block;
            color: #fff;
            width: 50px;
            font-size: 22px;
            padding: 14px 0;
            -webkit-border-radius: 2px;
            -moz-border-radius: 2px;
            border-radius: 2px;
            float: left;
            margin-right: 10px;
            font-size: 30px
        }

        .icon {
            font-size: 20px;
            display: inline-block;
        }

        .bred {
            background: #ff5d5e;
        }

        .yellow {
            background: #eae874;
        }

        .green {
            background: #bdea74;
        }

        .stats_item_text {
            top: 12px;
            color: #7E7E7E;
            display: block;
            font-size: 14px;
            margin-top: 4px;
        }

        .box {
            -webkit-border-radius: 2px;
            -moz-border-radius: 2px;
            border-radius: 2px;
            -webkit-box-shadow: 0 1px 0 1px #e4e6eb;
            -moz-box-shadow: 0 1px 0 1px #e4e6eb;
            box-shadow: 0 1px 0 1px #e4e6eb;
            overflow: hidden;
            margin: 0 0 28px 0;
            background: #fff;
            padding: 10px;
            position: relative;
            background: #f5f5f5;
        }

        .stats_container {

        }

        .stats_item_value {
            font-size: 20px;
            font-weight: 700;
        }

        .widget {
            margin-left: 20px;
        }

        .widget_header {
            margin-bottom: -5px;
            padding: 10px 10px 0 10px;
        }

        .widget_header h2 {
            display: inline-block;
            color: #1d1d1b;
            margin-left: 10px;
            font-size: 18px !important;
            line-height: 18px !important;
            text-shadow: 0 1px 0 #fff;
            font-weight: 300;
            margin-bottom: 0;
        }
    </ui:style>
    <g:ScrollPanel>
        <g:LayoutPanel>
            <g:layer left="0" top="0" height="400px" width="35em">
                <g:LayoutPanel>
                    <g:layer top="5px" height="40px" left="0" right="0">
                        <g:HTMLPanel addStyleNames="{mainRes.style.chartActionRow}">
                            <div class="{style.actionRow}">
                                <g:ToggleButton ui:field="edit"
                                                addStyleNames="{mainRes.style.button_blue}" visible="true">Edit
                                </g:ToggleButton>
                                <g:ToggleButton ui:field="delete"
                                                addStyleNames="{mainRes.style.button_red}" visible="true">Delete
                                </g:ToggleButton>
                                <b:Tooltip ui:field="shareTooltip" placement="BOTTOM">
                                    <b:Button icon="LOCK" text="  Share" type="INFO" ui:field="share"/>
                                </b:Tooltip>
                            </div>
                        </g:HTMLPanel>
                    </g:layer>
                    <g:layer top="47px" bottom="0" left="0" right="0">
                        <g:FlowPanel>
                            <ed:ExperimentDisplayEditor ui:field="experimentDisplayEditor"></ed:ExperimentDisplayEditor>
                        </g:FlowPanel>
                    </g:layer>
                </g:LayoutPanel>
            </g:layer>
            <g:layer left="38em" top="0" height="400px" right="0">
                <g:LayoutPanel>
                    <g:layer top="5px" height="40px" left="0" right="0">
                        <g:HTMLPanel addStyleNames="{mainRes.style.chartActionRow}">
                            <div>
                                <h4>Publications</h4>
                            </div>
                        </g:HTMLPanel>
                    </g:layer>
                    <g:layer top="47px" bottom="80px" left="0" right="0">
                        <s:ExperimentDetailView.ResponsiveDataGrid ui:field="publicationDataGrid"/>
                    </g:layer>
                    <g:layer bottom="0" height="80px">
                        <b:Form type="HORIZONTAL" addStyleNames="{style.addPublicationControl}" ui:field="addDOIForm">
                            <b:ControlGroup addStyleNames="pull-right">
                                <b:Controls>
                                    <b:InputAddOn prependText="DOI">
                                        <b:TextBox ui:field="doiTb"></b:TextBox>
                                        <b:Button ui:field="addPublication">Add</b:Button>
                                    </b:InputAddOn>
                                </b:Controls>
                            </b:ControlGroup>
                        </b:Form>
                    </g:layer>
                </g:LayoutPanel>
            </g:layer>
            <g:layer top="400px" height="110px" left="0" width="35em">
                <b:FluidContainer addStyleNames="{style.stats_container}">
                    <b:FluidRow>
                        <b:Column size="6">
                            <g:HTMLPanel>
                                <div class="{style.box}">
                                    <span class="{style.stats_item_icon} {style.green}">
                                        <i class="e_icon-feather"/>
                                    </span>
                                    <span class="{style.stats_item_text}">
                                        Phenotypes
                                    </span>

                                    <span class="{style.stats_item_value}" ui:field="phenotypeCountLb"/>
                                </div>
                            </g:HTMLPanel>
                        </b:Column>

                        <b:Column size="6">
                            <g:HTMLPanel>
                                <!-- Traffic data -->
                                <div class="{style.box}">
                                    <span class="{style.stats_item_icon} {style.yellow}">
                                        <i class="e_icon-monitor"/>
                                    </span>
                                    <span class="{style.stats_item_text}">
                                        Analysis
                                    </span>

                                    <span class="{style.stats_item_value}" ui:field="analysisCountLb"/>
                                </div>
                            </g:HTMLPanel>
                        </b:Column>
                    </b:FluidRow>
                </b:FluidContainer>
            </g:layer>
            <g:layer top="510px" left="0" width="35em" height="400px">
                <g:HTMLPanel addStyleNames="{style.widget}">
                    <div class="{style.widget_header}">
                        <span class="{style.icon}">
                            <i class="e_icon-flow-tree"/>
                        </span>
                        <h2>
                            Ontologies
                        </h2>
                        <b:ButtonGroup ui:field="ontologyTypeBtnGrp" toggle="radio"
                                       addStyleNames="pull-right">
                            <b:Button ui:field="traitTypeBtn" size="SMALL" active="true">Trait</b:Button>
                            <b:Button ui:field="envTypeBtn" size="SMALL">Environment</b:Button>
                        </b:ButtonGroup>
                    </div>
                    <hr/>
                    <div>
                        <gchart:PieChart ui:field="ontologyChart"/>
                    </div>
                </g:HTMLPanel>
            </g:layer>
        </g:LayoutPanel>
    </g:ScrollPanel>
</ui:UiBinder>
