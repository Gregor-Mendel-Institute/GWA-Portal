<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>

    <ui:style type="com.gmi.nordborglab.browser.client.ui.card.TransformationCard.MyStyle">
        .card {
            width: 100%;
            height: 100%;
            background: white;
            float: left;
            padding: 10px 15px 10px;
            margin-top: 30px;
            -webkit-border-radius: 6px;
            -moz-border-radius: 6px;
            border-radius: 6px;
            -webkit-transition: box-shadow 0.2s linear, color 0.2s linear;
            -moz-transition: box-shadow 0.2s linear, color 0.2s linear;
            -o-transition: box-shadow 0.2s linear, color 0.2s linear;
            -ms-transition: box-shadow 0.2s linear, color 0.2s linear;
            transition: box-shadow 0.2s linear, color 0.2s linear;
            margin: 0 auto;
            -webkit-box-shadow: 0 2px 10px 2px #CDCECF;
            -moz-box-shadow: 0 2px 10px 2px #cdcecf;
            box-shadow: 0 2px 10px 2px #CDCECF;
            min-width: 260px;
            cursor: pointer;
            box-sizing: border-box;
        }

        .card_selected {
            -webkit-box-shadow: 0px 0px 5px 0px green !important;
            -moz-box-shadow: 0px 0px 5px 0px green !important;
            box-shadow: 0px 0px 5px 0px green !important;
            cursor: text !important;
        }

        .card li {
            display: inline-block;
            padding-right: 25px;
            font-size: 120%;
        }

        .title {
            margin-bottom: 0;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .ok {
            color: green;
            font-weight: bold;
            font-size: 200%;
        }

        .empty_ok {
            color: #EEE;
            font-weight: bold;
            font-size: 200%;
            cursor: pointer;
        }

        .focus_panel {
            float: left;
            margin-right: 30px;
        }

        .focus_panel:focus {
            outline: none;
        }

        .card_container {

        }

        .histogramContainer {
            border: 1px solid #ccc;
            margin-top: 10px;
            margin-bottom: 10px;

        }
    </ui:style>

    <g:FocusPanel ui:field="focusPanel" addStyleNames="{style.focus_panel}">
        <g:HTMLPanel addStyleNames="{style.card_container}">
            <div class="{style.card}" ui:field="card">
                <h4 class="{style.title}" ui:field="titleLb"></h4>
                <g:SimpleLayoutPanel ui:field="histogramContainer" addStyleNames="{style.histogramContainer}"/>
                <div>
                    <p>
                        <b>Shapiro-wilk score:</b>
                        <span ui:field="shapiroScoreLb"/>
                        <b:Icon type="OK" addStyleNames="pull-right {style.empty_ok}" ui:field="selectIcon"/>
                    </p>
                </div>
            </div>
        </g:HTMLPanel>
    </g:FocusPanel>

</ui:UiBinder>