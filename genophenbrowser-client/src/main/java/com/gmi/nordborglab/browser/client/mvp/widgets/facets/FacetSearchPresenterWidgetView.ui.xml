<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
        >
    <ui:style>
        .searchBox {
            margin-top: 26px;
        }

        .navPills {
            margin-top: 20px;
            margin-left: 0.5em;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="row">
            <div class="col-xs-9">
                <b:NavPills addStyleNames="{style.navPills}" ui:field="navPills"/>
            </div>
            <div class="col-xs-3">
                <b:InputGroup ui:field="searchBoxContainer" addStyleNames="{style.searchBox}">
                    <b:TextBox ui:field="searchBox" placeholder="Search..."></b:TextBox>
                    <b:InputGroupAddon icon="SEARCH"/>
                </b:InputGroup>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>