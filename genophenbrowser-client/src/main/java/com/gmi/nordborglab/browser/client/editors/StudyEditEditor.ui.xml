<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gui="urn:import:com.gmi.nordborglab.browser.client.ui"
	xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
		>
	<ui:style>
		.genotypeLabel {
			line-height: 30px;
			font-size: 13px;
		}
	</ui:style>

	<g:FlowPanel>
		<b:ControlGroup ui:field="studyNameGroup">
			<b:ControlLabel for="name">Name</b:ControlLabel>
			<b:Tooltip text='Name of the Analysis' trigger="FOCUS" placement="RIGHT">
				<b:TextBox visibleLength="30" placeholder="Name" alternateSize="XLARGE" ui:field="name"
						   controlGroup="{studyNameGroup}" errorLabel="{studyNameErrors}"/>
			</b:Tooltip>
			<b:HelpInline ui:field="studyNameErrors"></b:HelpInline>
		</b:ControlGroup>
		<b:ControlGroup ui:field="producerGroup">
			<b:ControlLabel for="producer">Producer</b:ControlLabel>
			<b:Tooltip text='Name of the Producer' trigger="FOCUS" placement="RIGHT">
				<b:TextBox visibleLength="30" placeholder="Producer" alternateSize="XLARGE" ui:field="producer"
						   controlGroup="{producerGroup}" errorLabel="{producerErrors}"/>
			</b:Tooltip>
			<b:HelpInline ui:field="producerErrors"></b:HelpInline>
		</b:ControlGroup>
		<b:ControlGroup ui:field="protocolGroup">
			<b:ControlLabel for="protocol">Protocol</b:ControlLabel>
			<b:Tooltip text='Type of Analysis' trigger="FOCUS" placement="RIGHT">
				<gui:ValidationValueListBox ui:field="protocol" controlGroup="{protocolGroup}"
											errorLabel="{protocolErrors}"></gui:ValidationValueListBox>
			</b:Tooltip>
			<b:HelpInline ui:field="protocolErrors"></b:HelpInline>
		</b:ControlGroup>
		<b:ControlGroup ui:field="genotypeGroup">
			<b:ControlLabel for="genotype">Genotype</b:ControlLabel>
			<b:Tooltip text='Genotype dataset' trigger="FOCUS" placement="RIGHT">
				<b:Label ui:field="genotype" addStyleNames="{style.genotypeLabel}"/>
			</b:Tooltip>
			<b:HelpInline ui:field="genotypeErrors"></b:HelpInline>
		</b:ControlGroup>
		<b:ControlGroup ui:field="studyDateGroup">
			<b:ControlLabel for="studyDate">Producer</b:ControlLabel>
			<b:Tooltip text='Date of the Analysis' trigger="FOCUS" placement="RIGHT">
				<b:TextBox visibleLength="20" placeholder="Study Date" alternateSize="XLARGE" ui:field="studyDate"
						   controlGroup="{studyDateGroup}" errorLabel="{studyErrors}"/>
			</b:Tooltip>
			<b:HelpInline ui:field="studyErrors"></b:HelpInline>
		</b:ControlGroup>
	</g:FlowPanel>
</ui:UiBinder>