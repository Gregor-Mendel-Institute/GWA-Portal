<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:ed='urn:import:com.gmi.nordborglab.browser.client.editors'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:gui="urn:import:com.gmi.nordborglab.browser.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
             ui:generateLocales='default'>

    <ui:with field="mainRes"
             type="com.gmi.nordborglab.browser.client.resources.MainResources"/>


    <ui:style>
        .actionRow {
            float: right;
        }


        .subheader h1 {
            font-size: 15px;
            line-height: 34px;
            margin-bottom: 0px;
            color: #808080;
        }

        .job_table td {
            padding: 3px 0;
            vertical-align: middle;
        }


        .actionDropDown > a {
            margin-top: 0px !important;
            margin-bottom: 0px !important;
        }


        .gwas_dropdown {
            text-align: left;
        }

        .gwas_container {
        }

        .job_dates {
            margin-top: 30px;
            text-align: center;
            font-size: 12px;
        }

        .job_task {
            font-size: 12px;
            text-align: center;
        }

    </ui:style>
    <g:ScrollPanel>
        <g:LayoutPanel>
            <g:layer left="0" top="0" height="28em" right="0">
                <g:LayoutPanel ui:field="topLeftPanel">
                    <g:layer left="0" top="0" bottom="0" width="26em">
                        <g:LayoutPanel>
                            <g:layer top="5px" height="40px" left="0" right="0">
                                <g:HTMLPanel addStyleNames="{mainRes.style.chartActionRow}" ui:field="actionBarPanel">
                                    <div class="{style.actionRow}">
                                        <div class="{mainRes.style.actionIcon}">
                                            <b:Tooltip placement="BOTTOM" text="Click to display download options">
                                                <gui:IconDropdown icon="DOWNLOAD_ALT">
                                                    <b:NavLink text="Phenotype (CSV)"
                                                               ui:field="navLinkPhenCSV"></b:NavLink>
                                                    <b:NavLink text="Phenotype (JSON)" target="_BLANK"
                                                               ui:field="navLinkPhenJSON"></b:NavLink>
                                                    <b:Divider ui:field="downloadDivider"/>
                                                    <b:NavLink text="GWAS-Pvalues (CSV)"
                                                               ui:field="navLinkPvalCSV"></b:NavLink>
                                                    <b:NavLink text="GWAS-Pvalues (HDF5)"
                                                               ui:field="navLinkPvalHDF5"></b:NavLink>
                                                    <b:NavLink text="GWAS-Pvalues (JSON)" target="_BLANK"
                                                               ui:field="navLinkPvalJSON"></b:NavLink>
                                                    <b:NavLink text="Download Plots" ui:field="plotsLink"/>
                                                </gui:IconDropdown>
                                            </b:Tooltip>
                                        </div>
                                        <div class="{mainRes.style.actionIcon}">
                                            <b:Tooltip placement="BOTTOM" text="Delete analysis">
                                                <b:Icon type="TRASH" ui:field="delete"/>
                                            </b:Tooltip>
                                        </div>
                                        <div class="{mainRes.style.actionIcon}">
                                            <b:Tooltip placement="BOTTOM" text="Edit analysis">
                                                <b:Icon type="EDIT" iconSize="LARGE" ui:field="edit"/>
                                            </b:Tooltip>
                                        </div>

                                    </div>
                                </g:HTMLPanel>
                            </g:layer>
                            <g:layer top="47px" bottom="0" left="0" right="0">
                                <g:FlowPanel>
                                    <ed:StudyDisplayEditor ui:field="studyDisplayEditor"/>
                                </g:FlowPanel>
                            </g:layer>
                        </g:LayoutPanel>
                    </g:layer>
                    <g:layer left="27em" width="11em" top="0" bottom="0">
                        <g:LayoutPanel>
                            <g:layer top="5px" height="40px" left="0" right="0">
                                <g:HTMLPanel addStyleNames="{mainRes.style.chartActionRow}">
                                    <div style="text-align:center;">GWAS Status</div>
                                </g:HTMLPanel>
                            </g:layer>
                            <g:layer top="47px" bottom="0" left="0" right="0">
                                <g:HTMLPanel addStyleNames="{style.gwas_container}" ui:field="gwasJobContainer">
                                    <div style="margin-top:20px">
                                        <g:Label ui:field="taskLb" addStyleNames="{style.job_task}"/>
                                    </div>
                                    <div style="margin-top:20px;padding-left:28px;">
                                        <gui:CircularProgressBar ui:field="jobProgress" size="100" circleSize="10"
                                                                 progress="70"/>
                                    </div>
                                    <div style="margin-top:20px;text-align: center;">
                                        <gui:EnableDropdownButton ui:field="jobNABtn" text="N/A"
                                                                  addStyleNames="{style.gwas_dropdown}">
                                            <b:NavLink text="Upload" icon="UPLOAD"
                                                       ui:field="uploadBtn"/>
                                            <b:NavLink text="Run analysis" icon="CLOUD"
                                                       ui:field="startBtn"/>
                                        </gui:EnableDropdownButton>
                                        <gui:EnableDropdownButton ui:field="jobERRORBtn" type="DANGER" text="Error"
                                                                  addStyleNames="{style.gwas_dropdown}">
                                            <b:NavLink text="Delete" icon="REMOVE"
                                                       ui:field="deleteJobBtn"/>
                                            <b:NavLink text="Re-run" icon="CLOUD"
                                                       ui:field="rerunJobBtn"/>
                                        </gui:EnableDropdownButton>
                                        <gui:EnableDropdownButton ui:field="jobFinishedBtn" type="SUCCESS"
                                                                  text="Finished" addStyleNames="{style.gwas_dropdown}">
                                            <b:NavLink text="Delete" icon="REMOVE"
                                                       ui:field="deleteFinishedJobBtn"/>
                                        </gui:EnableDropdownButton>
                                        <b:Button active="false" enabled="false" type="WARNING" ui:field="jobWaitingBtn"
                                                  text="Waiting"/>
                                    </div>
                                    <div class="{style.job_dates}">
                                        <g:Label ui:field="modifiedLb"/>
                                        <g:Label ui:field="createdLb"/>
                                    </div>
                                </g:HTMLPanel>
                            </g:layer>
                        </g:LayoutPanel>
                    </g:layer>
                    <g:layer left="39em" top="0" bottom="0" right="0">
                        <g:LayoutPanel>
                            <g:layer top="5px" height="40px" left="0" right="0">
                                <g:HTMLPanel addStyleNames="{mainRes.style.chartActionRow}">
                                    <div class="{mainRes.style.chartIconContainer}">
                                        <g:HTMLPanel ui:field="geoChartBtnContainer"
                                                     addStyleNames=" {mainRes.style.iconContainer_active}  {mainRes.style.iconContainer}">
                                            <b:Tooltip text="Shows the geographic distribution on a map">
                                                <g:Button ui:field="geoChartBtn"
                                                          addStyleNames="{mainRes.style.earth} {mainRes.style.iconItem}"/>
                                            </b:Tooltip>
                                        </g:HTMLPanel>
                                        <g:HTMLPanel ui:field="pieChartBtnContainer"
                                                     addStyleNames="{mainRes.style.iconContainer_right} {mainRes.style.iconContainer}">
                                            <b:Tooltip text="Shows the geographic distribution as a piechart">
                                                <g:Button ui:field="pieChartBtn"
                                                          addStyleNames="{mainRes.style.piechart} {mainRes.style.iconItem}"/>
                                            </b:Tooltip>
                                        </g:HTMLPanel>
                                    </div>
                                </g:HTMLPanel>
                            </g:layer>
                            <g:layer top="47px" bottom="0" left="0" right="0">
                                <g:SimpleLayoutPanel ui:field="upperChartContainer"/>
                            </g:layer>
                        </g:LayoutPanel>
                    </g:layer>
                </g:LayoutPanel>
            </g:layer>
            <g:layer top="30em" height="30em" left="0" right="0">
                <g:LayoutPanel>
                    <g:layer top="0" height="40px" left="0" right="0">
                        <g:HTMLPanel addStyleNames="{mainRes.style.chartActionRow}">
                            <div class="{mainRes.style.chartIconContainer}">
                                <g:HTMLPanel ui:field="columnChartBtnContainer"
                                             addStyleNames=" {mainRes.style.iconContainer_active}  {mainRes.style.iconContainer}">
                                    <b:Tooltip text="Shows the phenotype distrubtion as a histogram">
                                        <g:Button ui:field="columnChartBtn"
                                                  addStyleNames="{mainRes.style.columnchart} {mainRes.style.iconItem}"/>
                                    </b:Tooltip>
                                </g:HTMLPanel>
                                <g:HTMLPanel ui:field="motionChartBtnContainer"
                                             addStyleNames="{mainRes.style.iconContainer_right} {mainRes.style.iconContainer}">
                                    <b:Tooltip text="Shows the phenotype values in a motionchart">
                                        <g:Button ui:field="motionChartBtn"
                                                  addStyleNames="{mainRes.style.motionchart} {mainRes.style.iconItem}"/>
                                    </b:Tooltip>
                                </g:HTMLPanel>
                            </div>
                        </g:HTMLPanel>
                    </g:layer>
                    <g:layer top="40px" bottom="0" left="0" right="0">
                        <g:SimpleLayoutPanel ui:field="lowerChartContainer"/>
                    </g:layer>
                </g:LayoutPanel>

            </g:layer>
        </g:LayoutPanel>
    </g:ScrollPanel>
</ui:UiBinder>
