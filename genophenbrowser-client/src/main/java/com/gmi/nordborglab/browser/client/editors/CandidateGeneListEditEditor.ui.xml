<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'>
    <ui:style>

    </ui:style>
    <g:HTMLPanel>
        <div>
            <b:Form type="HORIZONTAL">
                <b:FormGroup>
                    <b:FormLabel addStyleNames="col-sm-2" for="name">Name</b:FormLabel>
                    <b:Tooltip title='Name of candidate gene list' trigger="FOCUS" placement="RIGHT">
                        <g:FlowPanel addStyleNames="col-sm-7">
                            <b:TextBox placeholder="Name" b:id="name" ui:field="name" allowBlank="false"
                                       validateOnBlur="true"></b:TextBox>
                        </g:FlowPanel>
                    </b:Tooltip>
                    <b:HelpBlock iconType="EXCLAMATION_TRIANGLE" addStyleNames="col-sm-3"/>
                </b:FormGroup>
                <b:FormGroup>
                    <b:FormLabel addStyleNames="col-sm-2" for="description">Description</b:FormLabel>
                    <b:Tooltip title='Design of the Study' trigger="FOCUS" placement="RIGHT">
                        <g:FlowPanel addStyleNames="col-sm-7">
                            <b:TextArea characterWidth="80" visibleLines="10" placeholder="Description"
                                        ui:field="description"/>
                        </g:FlowPanel>
                    </b:Tooltip>
                    <b:HelpBlock iconType="EXCLAMATION_TRIANGLE" addStyleNames="col-sm-3"/>
                </b:FormGroup>
            </b:Form>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 