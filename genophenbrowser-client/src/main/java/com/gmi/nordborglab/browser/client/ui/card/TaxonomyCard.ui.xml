<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>

    <ui:style>
        .card {
            background: white;
            float: left;
            padding: 10px 15px 10px;
            margin-top: 30px;
            -webkit-border-radius: 6px;
            -moz-border-radius: 6px;
            border-radius: 6px;
            -webkit-transition: box-shadow 0.2s linear, color 0.2s linear;
            -moz-transition: box-shadow 0.2s linear, color 0.2s linear;
            -o-transition: box-shadow 0.2s linear, color 0.2s linear;
            -ms-transition: box-shadow 0.2s linear, color 0.2s linear;
            transition: box-shadow 0.2s linear, color 0.2s linear;
            width: 100%;
            margin: 0 auto;
            -webkit-box-shadow: 0 2px 10px 2px #CDCECF;
            -moz-box-shadow: 0 2px 10px 2px #cdcecf;
            box-shadow: 0 2px 10px 2px #CDCECF;
            cursor: pointer;
            box-sizing: border-box;
            width: 440px;
        }

        .card:hover {
            -webkit-box-shadow: 0px 0px 5px 0px green !important;
            -moz-box-shadow: 0px 0px 5px 0px green !important;
            box-shadow: 0px 0px 5px 0px green !important;
            cursor: text !important;
        }

        .card li {
            display: inline-block;
            padding-right: 25px;
            font-size: 120%;
        }

        .title {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .card_container {
            margin-top: 30px;
            margin-right: 30px;
            float: left;
        }

        .card_container:focus {
            -webkit-box-shadow: 0px 0px 5px 0px green !important;
            -moz-box-shadow: 0px 0px 5px 0px green !important;
            box-shadow: 0px 0px 5px 0px green !important;
            outline: none;
        }

        .image {
            padding: 10px;
            margin: auto;
        }

        .stats_table {
            margin-left: 10px;
        }

        .stats_table .icon {
            font-size: 20px;
        }

        .stats_table td {
            padding: 18px 0;
            border: none;
            border-bottom: 1px dotted #CCC;
            padding-top: 13px;
            padding-bottom: 13px;
        }

        .stats_table .value {
            font-size: 21px;
            font-weight: 600;
        }

        .stats_table .full {
            color: #666;
            font-size: 13px;
        }
    </ui:style>

    <g:FocusPanel ui:field="focusPanel" addStyleNames="{style.card_container}">
        <g:HTMLPanel>
            <div class="{style.card}" ui:field="card">
                <h4 class="{style.title}" ui:field="title"></h4>
                <table>
                    <tr style="vertical-align:top;">
                        <td style="width:50%;">
                            <g:Image ui:field="taxonomyImg" addStyleNames="{style.image}"/>
                        </td>
                        <td>
                            <table class="table {style.stats_table}">
                                <tbody>

                                    <tr>
                                        <td class="{style.icon}">
                                            <i class="e_icon-leaf"/>
                                        </td>
                                        <td class="{style.value}">
                                            <span ui:field="statsPassports"/>
                                        </td>
                                        <td class="{style.full}">Accessions</td>
                                    </tr>
                                    <tr>
                                        <td class="{style.icon}">
                                            <i class="e_icon-tag"/>
                                        </td>
                                        <td class="{style.value}">
                                            <span ui:field="statsStocks"/>
                                        </td>
                                        <td class="{style.full}">Stocks</td>
                                    </tr>
                                    <tr>
                                        <td class="{style.icon}">
                                            <i class="e_icon-database"/>
                                        </td>
                                        <td class="{style.value}">
                                            <span ui:field="statsGenotypes"/>
                                        </td>
                                        <td class="{style.full}">Genotypes</td>
                                    </tr>
                                    <tr>
                                        <td class="{style.icon}">
                                            <i class="e_icon-feather"/>
                                        </td>
                                        <td class="{style.value}">
                                            <span ui:field="statsPhenotypes"/>
                                        </td>
                                        <td class="{style.full}">Phenotypes</td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </table>
                <p>

                </p>
            </div>
        </g:HTMLPanel>
    </g:FocusPanel>
</ui:UiBinder>