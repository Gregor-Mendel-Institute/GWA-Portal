<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:base="urn:import:com.github.gwtbootstrap.client.ui.base"
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'
             xmlns:gui='urn:import:com.gmi.nordborglab.browser.client.ui'
        >
    <g:LayoutPanel >
        <g:layer top="5px" height="40px">
             <b:TabPanel ui:field="tabPanel">
                 <b:TabLink createTabPane="false" text="Existing GWAS plots" ui:field="gwasListTab" dataTarget="gwasListTab"/>
                 <b:TabLink createTabPane="false" text="Upload GWAS plots" ui:field="gwasUploadTab" dataTarget="gwassUploadTab"/>
             </b:TabPanel>
        </g:layer>
        <g:layer top="45px" bottom="0">
            <g:LayoutPanel ui:field="tabPaneContainer">
                <g:layer top="0" bottom="0">
                    <g:SimpleLayoutPanel ui:field="gwasListPanel">
                        <g:LayoutPanel>
                            <g:layer top="0" height="100px"><g:HTMLPanel>Filter</g:HTMLPanel></g:layer>
                            <g:layer top="55px" bottom="70px">
                                <c:DataGrid ui:field="gwasResultDataGrid" />
                            </g:layer>
                            <g:layer height="50px" bottom="0" >
                                <gui:CustomPager ui:field="gwasResultPager" />
                            </g:layer>
                        </g:LayoutPanel>
                    </g:SimpleLayoutPanel>
                </g:layer>
                <g:layer top="0" bottom="0">
                    <g:SimpleLayoutPanel ui:field="gwasPlotContainer" />
                </g:layer>
                <g:layer top="0" bottom="0"><g:SimpleLayoutPanel ui:field="gwasUploadPanel"/></g:layer>
            </g:LayoutPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder>