<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:e="urn:import:com.google.gwt.editor.ui.client">
	<ui:style>
		.container {
			float: left;
			max-width: 565px;
			min-width: 191px;
			white-space: normal;
			width: 100%;
			word-wrap: break-word;
		}
		.row {
			margin: 0;
			padding: 10px 0;
			text-align: left;
		}
		.label {
			font-size: 15px;
			font-weight: normal;
			line-height: 1.2em;
			margin-bottom: 0;
			text-align: right;
			vertical-align: top;
			width: 100px;
			display:inline-block;
		}

		
		.value {
			padding: 0 0 0 13px;
			width: 441px;
			vertical-align: top;
			line-height: 1.39em;
			display:inline-block;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="{style.container}">
			<div class="{style.row}">
				<div class="{style.label}">Name</div>
				<g:Label ui:field="name" addStyleNames="{style.value}"/>
			</div>
			<div class="{style.row}">
				<div class="{style.label}">Originator</div>
				<g:Label ui:field="originator" addStyleNames="{style.value}" />		
			</div>
			<div class="{style.row}">
				<div class="{style.label}">Design</div>
				<g:Label ui:field="design" addStyleNames="{style.value}"/>
			</div>
			<div class="{style.row}">	
				<div class="{style.label}">Comments:</div>
				<g:Label ui:field="comments" addStyleNames="{style.value}"/>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 