<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:gui="urn:import:com.gmi.nordborglab.browser.client.ui"
             xmlns:e="urn:import:com.google.gwt.editor.ui.client"
             xmlns:ed='urn:import:com.gmi.nordborglab.browser.client.editors'

        >
    <ui:style>
        .container {
            float: left;
            max-width: 565px;
            min-width: 191px;
            white-space: normal;
            width: 100%;
            word-wrap: break-word;
        }

        .row {
            margin: 0;
            padding: 10px 0;
            text-align: left;
        }

        .label {
            font-size: 15px;
            font-weight: normal;
            line-height: 1.2em;
            margin-bottom: 0;
            text-align: right;
            vertical-align: top;
            width: 100px;
            display: inline-block;
        }

        .value {
            padding: 0 0 0 13px;
            width: 341px;
            vertical-align: top;
            line-height: 1.39em;
            display: inline-block;
        }

        .avatar_label {
            line-height: 60px;
            vertical-align: middle;
        }

        .access_value {
            margin-left: 13px;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="{style.container}">
            <div class="{style.row}">
                <div class="{style.label}">Name</div>
                <g:Label ui:field="name" addStyleNames="{style.value}"/>
            </div>
            <div class="{style.row}">
                <div class="{style.label}">Originator</div>
                <g:Label ui:field="originator" addStyleNames="{style.value}"/>
            </div>
            <div class="{style.row}">
                <div class="{style.label}">Design</div>
                <g:Label ui:field="design" addStyleNames="{style.value}"/>
            </div>
            <div class="{style.row}">
                <div class="{style.label}">Comments</div>
                <g:Label ui:field="comments" addStyleNames="{style.value}"/>
            </div>
            <div class="{style.row}">
                <div class="{style.label} {style.avatar_label}">Owner</div>
                <ed:AvatarOwnerDisplayEditor ui:field="ownerUser" addStyleNames="{style.value}"/>
            </div>
            <div class="{style.row}">
                <div class="{style.label}">Access</div>
                <gui:AccessLabel addStyleNames="{style.access_value}" ui:field="access"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 