<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
		>
	<ui:style>

	</ui:style>
	<g:FlowPanel>
		<b:ControlGroup ui:field="nameGroup">
			<b:ControlLabel for="name">Name</b:ControlLabel>
			<b:Tooltip text='Name of the Study' trigger="FOCUS" placement="RIGHT">
				<b:TextBox placeholder="Name" alternateSize="XLARGE" ui:field="name" controlGroup="{nameGroup}"
						   errorLabel="{nameErrors}"/>
			</b:Tooltip>
			<b:HelpInline ui:field="nameErrors"></b:HelpInline>
		</b:ControlGroup>
		<b:ControlGroup ui:field="originatorGroup">
			<b:ControlLabel for="originator">Name</b:ControlLabel>
			<b:Tooltip text='Originator of the Study' trigger="FOCUS" placement="RIGHT">
				<b:TextBox placeholder="Originator" alternateSize="XLARGE" ui:field="originator"
						   controlGroup="{originatorGroup}" errorLabel="{originatorErrors}"/>
			</b:Tooltip>
			<b:HelpInline ui:field="originatorErrors"></b:HelpInline>
		</b:ControlGroup>

		<b:ControlGroup ui:field="designGroup">
			<b:ControlLabel for="design">Name</b:ControlLabel>
			<b:Tooltip text='Design of the Study' trigger="FOCUS" placement="RIGHT">
				<b:TextArea characterWidth="80" visibleLines="10" placeholder="Design" alternateSize="XLARGE"
							ui:field="design" controlGroup="{designGroup}" errorLabel="{designErrors}"/>
			</b:Tooltip>
			<b:HelpInline ui:field="designErrors"></b:HelpInline>
		</b:ControlGroup>
		<b:ControlGroup ui:field="commentsGroup">
			<b:ControlLabel for="originator">Name</b:ControlLabel>
			<b:Tooltip text='Originator of the Study' trigger="FOCUS" placement="RIGHT">
				<b:TextArea characterWidth="80" visibleLines="10" placeholder="Comments" alternateSize="XLARGE"
							ui:field="comments" controlGroup="{commentsGroup}" errorLabel="{commentsErrors}"/>
			</b:Tooltip>
			<b:HelpInline ui:field="commentsErrors"></b:HelpInline>
		</b:ControlGroup>
	</g:FlowPanel>
</ui:UiBinder>