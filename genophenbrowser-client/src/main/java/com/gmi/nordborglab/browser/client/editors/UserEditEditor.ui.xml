<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:base="urn:import:com.github.gwtbootstrap.client.ui.base"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:e="urn:import:com.google.gwt.editor.ui.client">

    <ui:style>

    </ui:style>
    <g:HTMLPanel>
        <div>
            <b:ControlGroup ui:field="firstnameGroup">
                <b:ControlLabel for="firstname">Firstname</b:ControlLabel>
                <b:Controls>
                    <b:TextBox visibleLength="40" b:id="firstname" ui:field="firstname" placeholder="Firstname"
                               controlGroup="{firstnameGroup}" errorLabel="{firstnameErrors}"/>
                    <b:HelpInline ui:field="firstnameErrors"></b:HelpInline>
                </b:Controls>
            </b:ControlGroup>
            <b:ControlGroup ui:field="lastnameGroup">
                <b:ControlLabel for="lastname">Lastname</b:ControlLabel>
                <b:Controls>
                    <b:TextBox visibleLength="40" b:id="lastname" ui:field="lastname" placeholder="Lastname"
                               controlGroup="{lastnameGroup}" errorLabel="{lastnameErrors}"/>
                    <b:HelpInline ui:field="lastnameErrors"></b:HelpInline>
                </b:Controls>
            </b:ControlGroup>
            <b:ControlGroup>
                <b:ControlLabel for="email">Email</b:ControlLabel>
                <b:Controls>
                    <b:Label ui:field="email"></b:Label>
                </b:Controls>
            </b:ControlGroup>
            <b:ControlGroup ui:field="newPasswordGroup">
                <b:ControlLabel for="password">Password</b:ControlLabel>
                <b:Controls>
                    <b:PasswordTextBox ui:field="newPassword" b:id="password" placeholder="Password"
                                       controlGroup="{newPasswordGroup}" errorLabel="{newPasswordErrors}"/>
                    <b:HelpInline ui:field="newPasswordErrors"></b:HelpInline>
                </b:Controls>
            </b:ControlGroup>
            <b:ControlGroup ui:field="newPasswordConfirmGroup">
                <b:ControlLabel for="confirm_passport">Confirm password</b:ControlLabel>
                <b:Controls>
                    <b:PasswordTextBox ui:field="newPasswordConfirm" b:id="confirm_password"
                                       placeholder="Confirm password"
                                       controlGroup="{newPasswordConfirmGroup}"
                                       errorLabel="{newPasswordConfirmErrors}"/>
                    <b:HelpInline ui:field="newPasswordConfirmErrors"></b:HelpInline>
                </b:Controls>
            </b:ControlGroup>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>