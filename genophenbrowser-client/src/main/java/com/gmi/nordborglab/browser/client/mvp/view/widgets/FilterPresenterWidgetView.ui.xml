<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:base="urn:import:com.github.gwtbootstrap.client.ui.base"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:gwtbootstrap="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:style type='com.gmi.nordborglab.browser.client.mvp.view.widgets.FilterPresenterWidgetView.MyStyle'>
        .container {
            background-color: #f9f9f9;
            border: 1px solid #ccc;
            color: #666666;
            text-decoration: none;
            text-shadow: 1px 1px #ffffff;
            font-size: 12px;
        }

        .top_container {
            border-bottom: 1px solid #ccc;
            padding: 5px 15px 5px 15px;
            line-height: 26px;
        }

        .bottom_container {
            border-top: 1px solid white;
            padding: 5px 15px 5px 15px;
            line-height: 26px;
        }

        .active_items {
            list-style: none;
            display: inline-block;
            margin: 0 !important;
        }

        .active_items  li {
            display: inline-block;
            padding-left: 20px;
        }

        .filter_items {
            list-style: none;
            display: inline-block;
            margin-left: 20px;
            font-size: 12px;
            margin: 0 !important;
            font-weight: bold;
        }

        .filter_items li {
            display: inline-block;
            padding-left: 10px;
            padding-right: 10px;
            border-right: 1px solid #ccc;
            cursor: pointer;
        }

        .filter_items li:last-child {
            border-right: 0px;
        }

        .active_item {
            font-weight: bold;
            color: #ffffff;
            text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
            background-color: #5bb75b;
            background-image: literal("-moz-linear-gradient(top, #62c462, #51a351)");
            background-image: literal("-webkit-gradient(linear, 0 0, 0 100%, from(#62c462), to(#51a351))");
            background-image: literal("-webkit-linear-gradient(top, #62c462, #51a351)");
            background-image: literal("-o-linear-gradient(top, #62c462, #51a351)");
            background-image: literal("linear-gradient(to bottom, #62c462, #51a351)");
            background-repeat: repeat-x;
            filter: literal("progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff62c462', endColorstr='#ff51a351', GradientType=0)");
            border-color: #51a351 #51a351 #387038;
            border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
            filter: literal("progid:DXImageTransform.Microsoft.gradient(enabled = false)");
            -webkit-border-radius: 3px;
            -moz-border-radius: 3px;
            border-radius: 3px;
            font-size: 11.9px;
            display: inline-block;
            padding: 2px 10px;
            margin-bottom: 0;
            line-height: 20px;
            text-align: center;
            vertical-align: middle;
            border: 1px solid #26AD21;
            -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, .2), 0 1px 2px rgba(0, 0, 0, .05);
            -moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, .2), 0 1px 2px rgba(0, 0, 0, .05);
            box-shadow: inset 0 1px 0 rgba(255, 255, 255, .2), 0 1px 2px rgba(0, 0, 0, .05);
        }

        .close_icon {
            background-color: #418031;
            margin-left: 5px;
            border-radius: 50%;
            padding: 1px 0px 3px 1px;
            font-size: 10px;
            webkit-box-shadow: inset 0 2px 2px #285a1f;
            -moz-box-shadow: inset 0 2px 2px #285a1f;
            box-shadow: inset 0 2px 2px #285a1f;
            cursor: pointer;
        }

    </ui:style>

    <g:HTMLPanel addStyleNames="{style.container}" ui:field="availableFilterContainer">
        <div class="{style.top_container}">
            <span>Filter by:</span>
            <ul class="{style.filter_items}" ui:field="availableFilterContainerUl">

            </ul>
        </div>
        <div class="{style.bottom_container}">
            <span>Active filter:</span>
            <ul class="{style.active_items}" ui:field="activeFilterContainer">
                <li>
                    <div class="{style.active_item}">
                        <span>Phenotype = selfing</span>
                        <b:Icon type="REMOVE" addStyleNames="{style.close_icon}"/>
                    </div>
                </li>
                <li>
                    <span class="btn btn-small btn-success">Genotype = 250k</span>
                </li>
            </ul>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>