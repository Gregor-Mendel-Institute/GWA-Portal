<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:base="urn:import:com.github.gwtbootstrap.client.ui.base">

    <ui:style>
        .filedroppanel {
            border: 2px dashed #00848e;
            background-color: #ebf5f7;
            text-align: center;
            color: #b8b8b8;
            font-size: 2em;
            font-family: Arial, sans-serif;
            height: 250px;
        }

        .filedroppanel h1 {
            line-height: 220px;
        }

        .fileinput {
            visibility: hidden;
        }

        .gwasUploadButtonRow {
            margin-top: 20px;
        }

        .fileSelectTable {
            width: 100%;
        }

        .progressbar {
            width: 200px;
        }




        .phenotypeValueStatus {
            line-height: 30px;
        }

        .phenotypeValueStatusIcon {
            margin-right:10px;
        }
    </ui:style>

    <g:LayoutPanel ui:field="uploadGWASPanel">
        <g:layer top="0" bottom="0">
            <b:FluidContainer ui:field="gwasUploadPanel">
                <b:FluidRow >
                    <b:Column size="12">
                        <g:HTMLPanel>
                            <h4>Upload</h4>
                            <p>Use on of the methods below to upload a GWAS result</p>
                        </g:HTMLPanel>
                    </b:Column>
                </b:FluidRow>
                <b:FluidRow>
                    <b:Column size="12">
                        <g:HTML ui:field="gwasFileDropPanel">
                            <div class="{style.filedroppanel}">
                                <h1>Drag and drop gwas files from your computer here</h1>
                            </div>
                        </g:HTML>
                    </b:Column>
                </b:FluidRow>
                <b:FluidRow addStyleNames="{style.gwasUploadButtonRow}">
                    <b:Column size="3">
                        <b:Controls>
                            <b:Form ui:field="gwasUploadForm">
                                <b:Button type="SUCCESS" icon="PLUS" ui:field="gwasFileBrowseBtn">Browse files...</b:Button>
                                <b:FileUpload ui:field="gwasFileUploadBtn" addStyleNames="{style.fileinput}"></b:FileUpload>
                            </b:Form>
                        </b:Controls>
                    </b:Column>
                    <b:Column size="9">
                        <g:HTMLPanel ui:field="fileSelectPanel" addStyleNames="fade">
                            <table class="{style.fileSelectTable} table table-striped">
                                <tbody>
                                    <tr>
                                        <td><span ui:field="gwasFileName"></span></td>
                                        <td><span ui:field="gwasFileSize"></span></td>
                                        <td><span ui:field="gwasFileExtCheck" /><span ui:field="gwasFileExt"></span></td>
                                        <td><b:ProgressBar ui:field="fileUploadProgressBar" visible="false" addStyleNames="{style.progressbar}"></b:ProgressBar></td>
                                        <td>
                                            <b:Button type="WARNING" icon="BAN_CIRCLE" ui:field="gwasFileUploadCancelBtn" visible="false">Cancel</b:Button>
                                            <b:Button addStyleNames="pull-right" icon="UPLOAD" type="PRIMARY"  ui:field="gwasFileUploadStartBtn" visible="false">Upload</b:Button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </g:HTMLPanel>
                    </b:Column>
                </b:FluidRow>
            </b:FluidContainer>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder>