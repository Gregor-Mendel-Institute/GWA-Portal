<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:ed='urn:import:com.gmi.nordborglab.browser.client.editors'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:base="urn:import:com.github.gwtbootstrap.client.ui.base"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
             ui:generateLocales='default'>

    <ui:style>

        .container {
            padding: 0px 50px;
            margin-top: 55px;
        }

        .icon {
            font-size: 128px;
        }

        .form_container {
            padding-left: 20px;
            border-left: 1px solid #edeff1;
            box-shadow: inset 3px 0px 4px -1px #fafafa;
        }

        .avatar_container {
            margin-top: 50px;
            text-align: right;
            margin-right: 10%;
        }

        .avatar_button {
            margin-top: 5px;
            text-align: right;
            margin-right: 10%;
        }

        .avatar_header {

        }

        .avatar_popup {
            text-align: left;
        }

        .avatar_type {
            font-size: 16px;
        }

        .avatar_row {
            margin-left: 20px;
            width: 250px;
            margin-right: 10px;
            padding: 4px;
            cursor: pointer;
        }

        .avatar_row:hover {
            background-color: #EEE;
        }

        .avatar_icon {
            color: green;
            float: right;
            font-size: 20px;
            line-height: 40px;

        }

        .avatar_row a {
            text-decoration: none;
            color: #0088cc;
        }

        .avatar_row a:hover {
            text-decoration: none;
            color: #0088cc;
        }

        .avatar_row a:visited {
            color: #0088cc;
            text-decoration: none;
        }

    </ui:style>

    <g:SimpleLayoutPanel ui:field="container">
        <g:ScrollPanel>
            <g:HTMLPanel addStyleNames="{style.container}">
                <div class="container-fluid">
                    <div class="row-fluid">
                        <div class="span3">
                            <div class="{style.avatar_container}">
                                <img ui:field="avatarImg"/>
                            </div>
                            <div class="{style.avatar_button}">
                                <b:DropdownButton text="Change picture" icon="USER"
                                                  addStyleNames="{style.avatar_popup}">
                                    <b:NavHeader addStyleNames="{style.avatar_header}">Change your picture</b:NavHeader>
                                    <b:Divider/>
                                    <base:ListItem addStyleNames="{style.avatar_row}">
                                        <g:FocusPanel ui:field="gravatarPanel">
                                            <g:HTMLPanel>
                                                <img ui:field="gravatarImg"/>
                                                <a href="javascript:;">
                                                    <span class="{style.avatar_type}">Gravatar</span>
                                                </a>
                                                <span style="font-size:12px;">[<a href="http://gravatar.com/emails/"
                                                                                  ui:field="gravatarLink"
                                                                                  target="_blank" style="cursor:help;">
                                                    Change</a>]
                                                </span>
                                                <i ui:field="gravatarImgCheck"
                                                   class="e_icon-check {style.avatar_icon}"/>
                                            </g:HTMLPanel>
                                        </g:FocusPanel>
                                    </base:ListItem>
                                    <b:Divider/>
                                    <base:ListItem addStyleNames="{style.avatar_row}">
                                        <g:FocusPanel ui:field="identiconPanel">
                                            <g:HTMLPanel>
                                                <a href="javascript:;">
                                                    <img ui:field="identiconImg"/>
                                                    <span class="{style.avatar_type}">Identicon</span>
                                                    <i ui:field="identiconImgCheck"
                                                       class="e_icon-check {style.avatar_icon}"/>
                                                </a>
                                            </g:HTMLPanel>
                                        </g:FocusPanel>
                                    </base:ListItem>
                                    <b:Divider/>
                                </b:DropdownButton>
                            </div>
                        </div>
                        <div class="span9">
                            <div class="{style.form_container}">
                                <form class="form-horizontal">
                                    <fieldset>
                                        <legend>Personal Information</legend>
                                        <ed:UserEditEditor ui:field="userEditEditor"/>
                                    </fieldset>
                                    <div class="form-actions">
                                        <b:Button type="PRIMARY" ui:field="saveBtn">Save changes</b:Button>
                                        <b:Button ui:field="cancelBtn">Cancel</b:Button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </g:HTMLPanel>
        </g:ScrollPanel>
    </g:SimpleLayoutPanel>
</ui:UiBinder>
