<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
             ui:generateLocales='default'>
    <ui:style>
        .button {
            margin-top: 5px;
        }
    </ui:style>

    <g:LayoutPanel>
        <g:layer top="0" height="40px">
            <g:FlowPanel>
                <b:Button ui:field="downloadBtn" size="SMALL" type="PRIMARY" icon="CIRCLE_ARROW_DOWN"
                          text="Download plots" addStyleNames="pull-right {style.button}"></b:Button>
            </g:FlowPanel>
        </g:layer>
        <g:layer top="45px" bottom="0">
            <g:SimpleLayoutPanel ui:field="gwasPlotContainer"></g:SimpleLayoutPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder>
