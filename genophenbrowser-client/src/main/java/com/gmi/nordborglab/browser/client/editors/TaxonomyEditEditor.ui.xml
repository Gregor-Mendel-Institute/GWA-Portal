<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:e="urn:import:com.google.gwt.editor.ui.client">
	<ui:style>
		.container {
			float: left;
			max-width: 800px;
			min-width: 191px;
			white-space: normal;
			width: 100%;
			word-wrap: break-word;
		}
		.row {
			margin: 0;
			padding: 10px 0;
			text-align: left;
		}
		.label {
			font-size: 15px;
			font-weight: normal;
			line-height: 1.2em;
			margin-bottom: 0;
			text-align: right;
			vertical-align: top;
			width: 115px;
			display:inline-block;
		}

		
		.value {
			padding: 0 0 0 13px;
			vertical-align: top;
			line-height: 1.39em;
			display:inline-block;
			width:280px;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="{style.container}">
			<div class="{style.row}">
				<div class="{style.label}">Genus</div>
				<e:ValueBoxEditorDecorator ui:field="genus" addStyleNames="{style.value}">
					<e:valuebox>
						<g:TextBox visibleLength="40"/>
					</e:valuebox>
				</e:ValueBoxEditorDecorator>
			</div>
			<div class="{style.row}">
				<div class="{style.label}">Species</div>
				<e:ValueBoxEditorDecorator ui:field="species" addStyleNames="{style.value}">
					<e:valuebox>
						<g:TextBox visibleLength="40"/>
					</e:valuebox>
				</e:ValueBoxEditorDecorator>
			</div>
			<div class="{style.row}">
				<div class="{style.label}">Sub-species</div>
				<e:ValueBoxEditorDecorator ui:field="subspecies" addStyleNames="{style.value}">
					<e:valuebox>
						<g:TextBox visibleLength="40"/>
					</e:valuebox>
				</e:ValueBoxEditorDecorator>
			</div>
			<div class="{style.row}">
				<div class="{style.label}">Sub-taxa</div>
				<e:ValueBoxEditorDecorator ui:field="subtaxa" addStyleNames="{style.value}">
					<e:valuebox>
						<g:TextBox visibleLength="40"/>
					</e:valuebox>
				</e:ValueBoxEditorDecorator>
			</div>
			<div class="{style.row}">	
				<div class="{style.label}">Race:</div>
				<e:ValueBoxEditorDecorator ui:field="race" addStyleNames="{style.value}">
					<e:valuebox>
						<g:TextBox visibleLength="40"/>
					</e:valuebox>
				</e:ValueBoxEditorDecorator>
			</div>
			<div class="{style.row}">	
				<div class="{style.label}">Population:</div>
				<e:ValueBoxEditorDecorator ui:field="population" addStyleNames="{style.value}">
					<e:valuebox>
						<g:TextBox visibleLength="40"/>
					</e:valuebox>
				</e:ValueBoxEditorDecorator>
			</div>
			<div class="{style.row}">	
				<div class="{style.label}">Common name:</div>
				<e:ValueBoxEditorDecorator ui:field="commonName" addStyleNames="{style.value}">
					<e:valuebox>
						<g:TextBox visibleLength="40"/>
					</e:valuebox>
				</e:ValueBoxEditorDecorator>
			</div>
			<div class="{style.row}">	
				<div class="{style.label}">Term-accession:</div>
				<e:ValueBoxEditorDecorator ui:field="termAccession" addStyleNames="{style.value}">
					<e:valuebox>
						<g:TextBox visibleLength="40"/>
					</e:valuebox>
				</e:ValueBoxEditorDecorator>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 