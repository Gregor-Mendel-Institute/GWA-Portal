<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'
             xmlns:gui='urn:import:com.gmi.nordborglab.browser.client.ui'
        >

    <ui:style>
        .navPills {
            margin-top: 20px;
            margin-left: 0.5em;
        }

        .searchBox {
            display: inline-block;
            margin-top: 20px;
            margin-right: 20px;
        }

        .button {
            margin-top: 5px;
        }</ui:style>
    <g:LayoutPanel>
        <g:layer top="5px" height="40px">
            <b:NavTabs ui:field="tabPanel">
                <b:TabListItem active="true" ui:field="gwasListTab" text="Existing GWAS plots"></b:TabListItem>
                <b:TabListItem ui:field="gwasUploadTab" text="Upload GWAS plot"></b:TabListItem>
            </b:NavTabs>
        </g:layer>
        <g:layer top="45px" bottom="0">
            <g:DeckLayoutPanel ui:field="tabPaneContainer">
                <g:SimpleLayoutPanel ui:field="gwasListPanel">
                    <g:LayoutPanel>
                        <g:layer top="0" height="5em">
                            <g:SimplePanel ui:field="facetContainer"/>
                        </g:layer>
                        <g:layer top="5em" bottom="70px">
                            <c:DataGrid ui:field="gwasResultDataGrid"/>
                        </g:layer>
                        <g:layer height="50px" bottom="0">
                            <gui:CustomPager ui:field="gwasResultPager"/>
                        </g:layer>
                    </g:LayoutPanel>
                </g:SimpleLayoutPanel>
                <g:LayoutPanel ui:field="gwasPlotContainer">
                    <g:layer top="0" height="40px">
                        <g:FlowPanel>
                            <b:Button ui:field="downloadBtn" size="SMALL" type="PRIMARY" icon="ARROW_CIRCLE_DOWN"
                                      text="Download plots" addStyleNames="pull-right {style.button}"></b:Button>
                        </g:FlowPanel>
                    </g:layer>
                    <g:layer top="45px" bottom="0">
                        <g:SimpleLayoutPanel ui:field="gwasPlots"/>
                    </g:layer>
                </g:LayoutPanel>
                <g:SimpleLayoutPanel ui:field="gwasUploadPanel"/>
            </g:DeckLayoutPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder>