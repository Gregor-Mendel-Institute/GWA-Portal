<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:e="urn:import:com.google.gwt.editor.ui.client"
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:gui="urn:import:com.gmi.nordborglab.browser.client.ui"
        >
    <ui:style>
        .container {
            float: left;
            max-width: 800px;
            min-width: 191px;
            white-space: normal;
            width: 100%;
            word-wrap: break-word;
        }

        .row {
            margin: 0;
            padding: 10px 0;
            text-align: left;
        }

        .label {
            font-size: 15px;
            font-weight: normal;
            line-height: 1.2em;
            margin-bottom: 0;
            text-align: right;
            vertical-align: top;
            width: 90px;
            display: inline-block;
        }

        .value {
            padding: 0 0 0 13px;
            vertical-align: top;
            line-height: 1.39em;
            display: inline-block;
            width: 280px;
        }

            /* required because of bug that puts the typeadead below the modal */
        @external .typeahead;
        .typeahead {
            z-index: 1051 !important;
        }
    </ui:style>

    <g:FlowPanel>
        <b:ControlGroup ui:field="phentoypeNameGroup">
            <b:ControlLabel>Name</b:ControlLabel>
            <b:Tooltip text='Name of the phenotype' trigger="FOCUS" placement="RIGHT">
                <b:TextBox placeholder="Name" alternateSize="XLARGE" ui:field="localTraitName"></b:TextBox>
            </b:Tooltip>
        </b:ControlGroup>
        <b:ControlLabel>Trait-ontology</b:ControlLabel>
        <b:Tooltip text='Ontology term of the trait' trigger="FOCUS" placement="RIGHT">
            <b:InputAddOn prependIcon="SEARCH">
                <gui:OntologyTypeahead ui:field="traitOntologyTerm">
                    <b:TextBox placeholder="Trait-ontology" alternateSize="XLARGE"/>
                </gui:OntologyTypeahead>
            </b:InputAddOn>
        </b:Tooltip>
        <b:ControlLabel>Environment-ontology</b:ControlLabel>
        <b:Tooltip text='Ontology term of the environment' trigger="FOCUS" placement="RIGHT">
            <b:InputAddOn prependIcon="SEARCH">
                <gui:OntologyTypeahead ui:field="environOntologyTerm">
                    <b:TextBox placeholder="Environment-ontology" alternateSize="XLARGE"/>
                </gui:OntologyTypeahead>
            </b:InputAddOn>
        </b:Tooltip>
        <b:ControlGroup ui:field="unitOfMeasureGroup">
            <b:ControlLabel>Unit of measure</b:ControlLabel>
            <b:Tooltip text='Unit of measure' trigger="FOCUS" placement="RIGHT">
                <b:ValueListBox ui:field="unitOfMeasure"></b:ValueListBox>
            </b:Tooltip>
        </b:ControlGroup>
        <b:ControlLabel>Protocol</b:ControlLabel>
        <b:Tooltip text='Protocol of the phenotype' trigger="FOCUS" placement="RIGHT">
            <b:TextArea placeholder="Protocol" visibleLines="6" alternateSize="XLARGE"
                        ui:field="traitProtocol"></b:TextArea>
        </b:Tooltip>
    </g:FlowPanel>
