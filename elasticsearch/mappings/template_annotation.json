{
   "template":"geno_*",
   "settings":{
      "analysis":{
         "filter":{
            "ngrams":{
               "side":"front",
               "min_gram":2,
               "max_gram":255,
               "type":"edgeNGram"
            }
         },
         "analyzer":{
            "my_ngram":{
               "filter":[
                  "standard",
                  "lowercase",
                  "ngrams"
               ],
               "type":"custom",
               "tokenizer":"standard"
            }
         }
      }
   },
   "mappings":{
      "_default_":{
         "dynamic":"strict"
      },
      "snps":{
         "properties":{
            "chr":{
               "type":"string",
              "index": "not_analyzed",
              "fielddata": {
                "format": "doc_values"
              }
            },
            "position":{
              "type": "integer",
              "fielddata": {
                "format": "doc_values"
              }
            },
            "ref": {
              "type":"string",
              "index": "not_analyzed",
              "fielddata": {
                "format": "doc_values"
              }
            },
            "lyr":{
               "type":"string",
              "index": "not_analyzed",
              "fielddata": {
                "format": "doc_values"
              }
            },
            "alt":{
               "type":"string",
              "index": "not_analyzed",
              "fielddata": {
                "format": "doc_values"
              }
            },
            "annotation":{
               "type":"string",
              "index": "not_analyzed",
              "fielddata": {
                "format": "doc_values"
              }
            },
            "inGene":{
              "type": "boolean",
              "fielddata": {
                "format": "doc_values"
              }
            },
           "annotations": {
               "type":"nested",
               "properties": {
                 "effect": {
                   "type": "string",
                   "index": "not_analyzed",
                   "fielddata": {
                     "format": "doc_values"
                   }
                 },
                 "impact": {
                   "type": "string",
                   "index": "not_analyzed",
                   "fielddata": {
                     "format": "doc_values"
                   }
                 },
                 "function": {
                   "type": "string",
                   "index": "not_analyzed",
                   "fielddata": {
                     "format": "doc_values"
                   }
                 },
                 "codon_change": {
                   "type": "string",
                   "index": "not_analyzed",
                   "fielddata": {
                     "format": "doc_values"
                   }
                 },
                 "amino_acid_change": {
                   "type": "string",
                   "index": "not_analyzed",
                   "fielddata": {
                     "format": "doc_values"
                   }
                 },
                 "gene_name": {
                   "type": "string",
                   "index": "not_analyzed",
                   "fielddata": {
                     "format": "doc_values"
                   }
                 },
                 "transcript_id": {
                   "type": "string",
                   "index": "not_analyzed",
                   "fielddata": {
                     "format": "doc_values"
                   }
                 },
                 "rank": {
                   "type": "integer",
                   "fielddata": {
                     "format": "doc_values"
                   }
                 }
               }
            }
         }
      },
      "gene":{
         "properties":{
            "name":{
               "type":"multi_field",
               "fields":{
                  "name":{
                     "type":"string",
                     "boost":2.0
                  },
                  "partial":{
                     "type":"string",
                     "boost":1.5,
                     "index_analyzer":"my_ngram"
                  }
               }
            },
            "annotation":{
               "type":"string",
              "index": "not_analyzed",
              "fielddata": {
                "format": "doc_values"
              }
            },
            "chr":{
               "type":"string",
              "index": "not_analyzed",
              "fielddata": {
                "format": "doc_values"
              }
            },
            "start_pos":{
              "type": "integer",
              "fielddata": {
                "format": "doc_values"
              }
            },
            "end_pos":{
              "type": "integer",
              "fielddata": {
                "format": "doc_values"
              }
            },
            "strand":{
              "type": "boolean",
              "fielddata": {
                "format": "doc_values"
              }
            },
            "isoforms":{
               "type":"nested",
               "properties":{
                  "name":{
                     "type":"string",
                    "index": "not_analyzed",
                    "fielddata": {
                      "format": "doc_values"
                    }
                  },
                  "start_pos":{
                    "type": "integer",
                    "fielddata": {
                      "format": "doc_values"
                    }
                  },
                 "RNA_type": {
                   "type": "string",
                   "index": "not_analyzed",
                   "fielddata": {
                     "format": "doc_values"
                   }
                 },
                  "end_pos":{
                    "type": "integer",
                    "fielddata": {
                      "format": "doc_values"
                    }
                  },
                  "annotation":{
                     "type":"string",
                    "index": "not_analyzed",
                    "fielddata": {
                      "format": "doc_values"
                    }
                  },
                  "strand":{
                    "type": "boolean",
                    "fielddata": {
                      "format": "doc_values"
                    }
                  },
                  "description":{
                     "type":"string"
                  },
                  "short_description":{
                     "type":"string"
                  },
                  "curator_summary":{
                     "type":"string"
                  },
                  "exons":{
                     "type":"nested",
                     "properties":{
                        "start_pos":{
                          "type": "integer",
                          "fielddata": {
                            "format": "doc_values"
                          }
                        },
                        "end_pos":{
                          "type": "integer",
                          "fielddata": {
                            "format": "doc_values"
                          }
                        }
                     }
                  },
                  "cds":{
                     "type":"nested",
                     "properties":{
                       "frame": {
                         "type": "integer",
                         "fielddata": {
                           "format": "doc_values"
                         }
                       },
                        "start_pos":{
                          "type": "integer",
                          "fielddata": {
                            "format": "doc_values"
                          }
                        },
                        "end_pos":{
                          "type": "integer",
                          "fielddata": {
                            "format": "doc_values"
                          }
                        }
                     }
                  },
                  "five_prime_UTR":{
                     "type":"object",
                     "properties":{
                        "start_pos":{
                          "type": "integer",
                          "fielddata": {
                            "format": "doc_values"
                          }
                        },
                        "end_pos":{
                          "type": "integer",
                          "fielddata": {
                            "format": "doc_values"
                          }
                        }
                     }
                  },
                  "three_prime_UTR":{
                     "type":"object",
                     "properties":{
                        "start_pos":{
                          "type": "integer",
                          "fielddata": {
                            "format": "doc_values"
                          }
                        },
                        "end_pos":{
                          "type": "integer",
                          "fielddata": {
                            "format": "doc_values"
                          }
                        }
                     }
                  }
               }
            },
            "fragments":{
               "type":"nested",
               "properties":{
                  "start_pos":{
                    "type": "integer",
                    "fielddata": {
                      "format": "doc_values"
                    }
                  },
                  "end_pos":{
                    "type": "integer",
                    "fielddata": {
                      "format": "doc_values"
                    }
                  }
               }
            },
            "GO":{
               "type":"nested",
               "properties":{
                  "relation":{
                     "type":"string",
                    "index": "not_analyzed",
                    "fielddata": {
                      "format": "doc_values"
                    }
                  },
	          "exact":{
                     "type":"string"
                  },
                  "narrow": {
                     "type":"string"
                  }
               }
            }
         }
      }
   }
}
