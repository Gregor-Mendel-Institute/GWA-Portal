{
   "template":"annot_*",
   "settings":{
      "analysis":{
         "filter":{
            "ngrams":{
               "side":"front",
               "min_gram":2,
               "max_gram":255,
               "type":"edgeNGram"
            }
         },
         "analyzer":{
            "my_ngram":{
               "filter":[
                  "standard",
                  "lowercase",
                  "ngrams"
               ],
               "type":"custom",
               "tokenizer":"standard"
            }
         }
      }
   },
   "mappings":{
      "_default_":{
         "dynamic":"strict"
      },
      "snps":{
         "_parent": {
            "type":"gene"
         },
         "properties":{
            "chr":{
               "type":"string",
               "index":"not_analyzed"
            },
            "position":{
               "type":"integer"
            },
            "ref": {
              "type":"string",
               "index":"not_analyzed"
	    },
            "lyr":{
               "type":"string",
               "index":"not_analyzed"
            },
            "alt":{
               "type":"string",
               "index":"not_analyzed"
            },
            "annotation":{
               "type":"string",
               "index":"not_analyzed"
            },
            "inGene":{
               "type":"boolean"
            },
            "gene":{
               "type":"nested",
               "properties": {
                  "name":{"type":"string","index":"not_analyzed"},
                  "annotation":{"type":"string","index":"not_analyzed" },
                  "strand":{"type":"boolean"}, 
		  "gene_region":{
                     "type":"string",
                      "index":"not_analyzed"
                  },
                  "translation_type":{
                      "type":"string",
                       "index":"not_analyzed"
                  }
               }
            },
            "gene_left":{
               "type":"string","index":"not_analyzed"
            },
            "gene_right":{
               "type":"string","index":"not_analyzed"
            }
         }
      },
      "gene":{
         "properties":{
            "name":{
               "type":"multi_field",
               "fields":{
                  "name":{
                     "type":"string",
                     "boost":2.0
                  },
                  "partial":{
                     "type":"string",
                     "boost":1.5,
                     "index_analyzer":"my_ngram"
                  }
               }
            },
            "annotation":{
               "type":"string",
               "index":"not_analyzed"
            },
            "chr":{
               "type":"string",
               "index":"not_analyzed"
            },
            "start_pos":{
               "type":"integer"
            },
            "end_pos":{
               "type":"integer"
            },
            "strand":{
               "type":"boolean"
            },
            "isoforms":{
               "type":"nested",
               "properties":{
                  "name":{
                     "type":"string",
                     "index":"not_analyzed"
                  },
                  "start_pos":{
                     "type":"integer"
                  },
                  "RNA_type":{"type":"string","index":"not_analyzed"},
                  "end_pos":{
                     "type":"integer"
                  },
                  "annotation":{
                     "type":"string",
                     "index":"not_analyzed"
                  },
                  "strand":{
                     "type":"boolean"
                  },
                  "description":{
                     "type":"string"
                  },
                  "short_description":{
                     "type":"string"
                  },
                  "curator_summary":{
                     "type":"string"
                  },
                  "exons":{
                     "type":"nested",
                     "properties":{
                        "start_pos":{
                           "type":"integer"
                        },
                        "end_pos":{
                           "type":"integer"
                        }
                     }
                  },
                  "cds":{
                     "type":"nested",
                     "properties":{
                        "frame":{"type":"integer"},
                        "start_pos":{
                           "type":"integer"
                        },
                        "end_pos":{
                           "type":"integer"
                        }
                     }
                  },
                  "five_prime_UTR":{
                     "type":"object",
                     "properties":{
                        "start_pos":{
                           "type":"integer"
                        },
                        "end_pos":{
                           "type":"integer"
                        }
                     }
                  },
                  "three_prime_UTR":{
                     "type":"object",
                     "properties":{
                        "start_pos":{
                           "type":"integer"
                        },
                        "end_pos":{
                           "type":"integer"
                        }
                     }
                  }
               }
            },
            "fragments":{
               "type":"nested",
               "properties":{
                  "start_pos":{
                     "type":"integer"
                  },
                  "end_pos":{
                     "type":"integer"
                  }
               }
            },
            "GO":{
               "type":"nested",
               "properties":{
                  "relation":{
                     "type":"string",
                     "index":"not_analyzed"
                  },
	          "exact":{
                     "type":"string"
                  },
                  "narrow": {
                     "type":"string"
                  }
               }
            }
         }
      }
   }
}
