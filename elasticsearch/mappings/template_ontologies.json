{  
   "template":"ontologies",
   "settings":{  
      "analysis":{  
         "filter":{  
            "ngrams":{  
               "side":"front",
               "min_gram":2,
               "max_gram":255,
               "type":"edgeNGram"
            }
         },
         "analyzer":{  
            "my_ngram":{  
               "filter":[  
                  "standard",
                  "lowercase",
                  "ngrams"
               ],
               "type":"custom",
               "tokenizer":"standard"
            },
            "url":{  
               "type":"custom",
               "filter":[  
                  "standard",
                  "lowercase",
                  "stop"
               ],
               "tokenizer":"uax_url_email"
            }
         }
      }
   },
   "mappings":{  
      "_default_":{  
         "dynamic":"strict"
      },
      "term":{  
         "properties":{  
            "alt_id":{  
               "type":"string",
               "index":"not_analyzed",
                "fielddata": {
                  "format": "doc_values"
                }
            },
            "definition":{  
               "type":"string",
               "index_analyzer":"url"
            },
            "name":{  
               "type":"string",
               "boost":2.0,
               "fields":{  
                  "partial":{  
                     "type":"string",
                     "boost":1.5,
                     "index_analyzer":"my_ngram"
                  }
               }
            },
            "relationships":{  
               "type":"nested",
               "properties":{  
                  "term_id":{  
                     "type":"string",
                     "index":"not_analyzed",
                    "fielddata": {
                      "format": "doc_values"
                    }
                  },
                  "type":{  
                     "type":"string",
                     "index":"not_analyzed",
                    "fielddata": {
                      "format": "doc_values"
                    }
                  }
               }
            },
            "subsets":{  
               "type":"string"
            },
            "synonyms":{  
               "properties":{  
                  "name":{  
                     "type":"string"
                  },
                  "type":{  
                     "type":"string",
                     "index":"not_analyzed",
                    "fielddata": {
                      "format": "doc_values"
                    }
                  }
               }
            },
            "term_id":{  
               "type":"string",
               "index":"not_analyzed",
                "fielddata": {
                  "format": "doc_values"
                }
            },
            "type":{  
               "type":"string",
               "index":"not_analyzed",
                "fielddata": {
                  "format": "doc_values"
                }
            },
            "xrefs":{  
               "type":"string",
               "index":"not_analyzed",
                "fielddata": {
                  "format": "doc_values"
                }
            }
         }
      }
   }
}
