<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:gui="urn:import:com.gmi.nordborglab.browser.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
             ui:generateLocales='default'>
    <ui:style>

        .searchBox {
            margin-top: 26px;
        }
    </ui:style>

    <g:LayoutPanel>
        <g:layer top="5px" left="0" right="0" height="5em">
            <g:HTMLPanel>
                <div class="row">
                    <div class="col-sm-offset-9 col-sm-3">
                        <b:InputGroup ui:field="searchBoxContainer" addStyleNames="{style.searchBox}">
                            <b:TextBox ui:field="searchBox" placeholder="Search..."></b:TextBox>
                            <b:InputGroupAddon icon="SEARCH"/>
                        </b:InputGroup>
                    </div>
                </div>
            </g:HTMLPanel>
        </g:layer>
        <g:layer top="5em" left="0" right="0" bottom="30px">
            <c:DataGrid ui:field="dataGrid"/>
        </g:layer>
        <g:layer bottom="0" left="0" right="0" height="30px">
            <gui:CustomPager ui:field="pager"/>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder>
