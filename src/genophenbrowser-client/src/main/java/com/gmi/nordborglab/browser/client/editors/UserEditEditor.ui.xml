<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
        >

    <ui:style>

    </ui:style>
    <g:HTMLPanel>
        <div>
            <b:FormGroup>
                <b:FormLabel for="firstname" addStyleNames="col-sm-2">Firstname</b:FormLabel>
                <g:FlowPanel addStyleNames="col-sm-7">
                    <b:TextBox b:id="firstname" ui:field="firstname" placeholder="Firstname"/>
                </g:FlowPanel>
                <b:HelpBlock iconType="EXCLAMATION_TRIANGLE" addStyleNames="col-sm-3"/>
            </b:FormGroup>
            <b:FormGroup>
                <b:FormLabel for="lastname" addStyleNames="col-sm-2">Lastname</b:FormLabel>
                <g:FlowPanel addStyleNames="col-sm-7">
                    <b:TextBox b:id="lastname" ui:field="lastname" placeholder="Lastname"/>
                </g:FlowPanel>
                <b:HelpBlock iconType="EXCLAMATION_TRIANGLE" addStyleNames="col-sm-3"/>
            </b:FormGroup>
            <b:FormGroup>
                <b:FormLabel for="email" addStyleNames="col-sm-2">Email</b:FormLabel>
                <g:FlowPanel addStyleNames="col-sm-7">
                    <b:FormControlStatic ui:field="email"></b:FormControlStatic>
                </g:FlowPanel>
            </b:FormGroup>
            <b:FormGroup ui:field="newPasswordGroup">
                <b:FormLabel for="password" addStyleNames="col-sm-2">Password</b:FormLabel>
                <g:FlowPanel addStyleNames="col-sm-7">
                    <b:TextBox ui:field="newPassword" b:id="password" placeholder="Password" addStyleNames="col-sm-10"/>
                </g:FlowPanel>
                <b:HelpBlock ui:field="newPasswordErrors" iconType="EXCLAMATION_TRIANGLE" addStyleNames="col-sm-3"/>
            </b:FormGroup>
            <b:FormGroup ui:field="newPasswordConfirmGroup">
                <b:FormLabel for="confirm_passport" addStyleNames="col-sm-2">Confirm password</b:FormLabel>
                <g:FlowPanel addStyleNames="col-sm-7">
                    <b:TextBox ui:field="newPasswordConfirm" b:id="confirm_password" placeholder="Confirm password"/>
                </g:FlowPanel>
                <b:HelpBlock ui:field="newPasswordConfirmErrors" iconType="EXCLAMATION_TRIANGLE"
                             addStyleNames="col-sm-3"/>
            </b:FormGroup>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>