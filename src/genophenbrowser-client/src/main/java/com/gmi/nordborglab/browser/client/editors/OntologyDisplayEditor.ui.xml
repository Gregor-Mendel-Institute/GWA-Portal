<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .container {
            float: left;
            max-width: 800px;
            min-width: 191px;
            white-space: normal;
            width: 100%;
            word-wrap: break-word;
        }
        .row {
            margin: 0;
            padding: 10px 0;
            text-align: left;
        }
        .label {
            font-size: 15px;
            font-weight: normal;
            line-height: 1.2em;
            margin-bottom: 0;
            text-align: right;
            vertical-align: top;
            width: 180px;
            display:inline-block;
        }


        .value {
            padding: 0 0 0 13px;
            width: 441px;
            vertical-align: top;
            line-height: 1.39em;
            display:inline-block;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="{style.container}">
            <div class="{style.row}">
                <div class="{style.label}">Term Name</div>
                <g:Label ui:field="name" addStyleNames="{style.value}"/>
            </div>
            <div class="{style.row}">
                <div class="{style.label}">Identifier</div>
                <g:Label ui:field="acc" addStyleNames="{style.value}"/>
            </div>
            <div class="{style.row}">
                <div class="{style.label}">Type</div>
                <g:Label ui:field="termType" addStyleNames="{style.value}"/>
            </div>
            <div class="{style.row}">
                <div class="{style.label}">Definition</div>
                <g:Label ui:field="definition" addStyleNames="{style.value}"/>
            </div>
            <div class="{style.row}">
                <div class="{style.label}">Comment</div>
                <g:Label ui:field="comment" addStyleNames="{style.value}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 