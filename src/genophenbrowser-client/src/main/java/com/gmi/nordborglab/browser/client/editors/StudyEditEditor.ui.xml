<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
		>
	<ui:style>
		.genotypeLabel {
			line-height: 30px;
			font-size: 13px;
		}
	</ui:style>

    <g:HTMLPanel>
        <div>
            <b:Form type="HORIZONTAL">
                <b:FormGroup>
                    <b:FormLabel addStyleNames="col-sm-2" for="name">Name</b:FormLabel>
                    <b:Tooltip title='Name of Analysis' trigger="FOCUS" placement="RIGHT">
                        <g:FlowPanel addStyleNames="col-sm-7">
                            <b:TextBox placeholder="Name" b:id="name" ui:field="name" allowBlank="false"
                                       validateOnBlur="true"></b:TextBox>
                        </g:FlowPanel>
                    </b:Tooltip>
                    <b:HelpBlock iconType="EXCLAMATION_TRIANGLE" addStyleNames="col-sm-3"/>
                </b:FormGroup>
                <b:FormGroup>
                    <b:FormLabel addStyleNames="col-sm-2" for="producer">Producer</b:FormLabel>
                    <b:Tooltip title='Name of Analysis' trigger="FOCUS" placement="RIGHT">
                        <g:FlowPanel addStyleNames="col-sm-7">
                            <b:TextBox placeholder="Producer" b:id="producer" ui:field="producer"></b:TextBox>
                        </g:FlowPanel>
                    </b:Tooltip>
                    <b:HelpBlock iconType="EXCLAMATION_TRIANGLE" addStyleNames="col-sm-3"/>
                </b:FormGroup>
                <b:FormGroup>
                    <b:FormLabel addStyleNames="col-sm-2" for="protocol">Protocol</b:FormLabel>
                    <b:Tooltip title='Type of Analysis' trigger="FOCUS" placement="RIGHT">
                        <g:FlowPanel addStyleNames="col-sm-7">
                            <b:ValueListBox ui:field="protocol"></b:ValueListBox>
                        </g:FlowPanel>
                    </b:Tooltip>
                    <b:HelpBlock iconType="EXCLAMATION_TRIANGLE" addStyleNames="col-sm-3"/>
                </b:FormGroup>
                <b:FormGroup>
                    <b:FormLabel addStyleNames="col-sm-2" for="genotype">Genotype</b:FormLabel>
                    <b:Tooltip title='Type of Analysis' trigger="FOCUS" placement="RIGHT">
                        <g:FlowPanel addStyleNames="col-sm-7">
                            <b:Label ui:field="genotype" addStyleNames="{style.genotypeLabel}"/>
                        </g:FlowPanel>
                    </b:Tooltip>
                </b:FormGroup>
                <b:FormGroup>
                    <b:FormLabel addStyleNames="col-sm-2" for="studyDate">Protocol</b:FormLabel>
                    <b:Tooltip title='Date of the Analysis' trigger="FOCUS" placement="RIGHT">
                        <g:FlowPanel addStyleNames="col-sm-7">
                            <b:TextBox placeholder="Study Date" b:id="studyDate" ui:field="studyDate"></b:TextBox>
                        </g:FlowPanel>
                    </b:Tooltip>
                    <b:HelpBlock iconType="EXCLAMATION_TRIANGLE" addStyleNames="col-sm-3"/>
                </b:FormGroup>
            </b:Form>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>